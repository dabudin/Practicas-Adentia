
<script src="~/Scripts/MisScripts/ScriptsListaPedidosEmpleado.js"></script>

@{
    ViewBag.Title = "Pedidos Cliente";

    @* Esta línea de código refresca la vista del layout correspondiente, lo
        que permite que se vuelva a ejecutar su document.ready() de nuevo. *@
    Layout = "~/Views/Shared/_LayoutPractica.cshtml";
}

<h2>Lista de Pedidos</h2>

@* FILTRAR PEDIDOS POR CLIENTE Y FECHA *@
<form class="row d-flex justify-content-center justify-content-center mt-5">
    <div class="col-12 col-md-9 mt-2">
        <div class="d-block d-xl-inline pr-2">
            Cliente <input id="codigoCliente" type="number" class="mb-1 mr-3" />
        </div>
        <div class="d-block d-xl-inline pr-2">
            Desde <input id="fechaDesde" type="date" class="mb-1 mr-3" />
        </div>
        <div class="d-block d-xl-inline pr-2">
            Hasta <input id="fechaHasta" type="date" class="mb-1" />
        </div>
    </div>
    <div class="col-12 col-md-3 text-md-left mt-2">
        <input type="button" value="Filtrar" class="px-4 mx-1 mb-1" onclick="FiltrarPedidos()" />
        <input type="button" value="Limpiar filtros" class="px-3 mx-1" onclick="QuitarFiltros()" />
    </div>
</form>


@* TABLA PEDIDOS  *@
<div class="table-responsive">
    <table id="tablaPedidos" class="table mx-auto mt-3"></table>
</div>

@* MODAL DETALLE DE UN PEDIDO *@
<div class="modal fade" id="modalDetalle" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header bg-dark">
                <h5 class="modal-title text-light">Detalle del Pedido</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <p class="text-left mt-3">
                    <label><b>Código pedido: &nbsp;</b></label>
                    <label id="lblCodigoPedido"></label>
                    <br />

                    <label><b>Fecha pedido: &nbsp;</b></label>
                    <label id="lblFechaPedido"></label>
                    <br />
                </p>

                @* TABLA DETALLE DE UN PEDIDO *@
                <div class="card">
                    <table id="tablaDetalle" class="table table-hover"></table>
                </div>
            </div>

        </div>
    </div>
</div>
